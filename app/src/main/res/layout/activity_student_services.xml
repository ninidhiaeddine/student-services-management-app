<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <include layout="@layout/toolbar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewServices1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/dorms_services"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewServices1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLaundry"
                style="@style/ServiceButton"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_laundry"
                android:text="@string/laundry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCleaning"
                style="@style/ServiceButton"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_cleaning"
                android:text="@string/room_cleaning" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewServices2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/charles_hostler_services"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewServices2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonGym"
                style="@style/ServiceButton"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_gym"
                android:text="@string/gym" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPool"
                style="@style/ServiceButton"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_pool"
                android:text="@string/pool" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/shape"
        app:headerLayout="@layout/header_navigation_drawer"
        app:menu="@menu/navigation_drawer"
        tools:ignore="MissingConstraints" />

</androidx.drawerlayout.widget.DrawerLayout>
