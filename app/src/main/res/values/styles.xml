<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="SubHeader">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeColor">?android:colorPrimary</item>
    </style>

    <style name="ServiceButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
    </style>

</resources>